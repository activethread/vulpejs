extends layouts/site

block content
  .container(ng-controller="#{ui.controller}Controller")
    form(name="resetPasswordForm" role="form" ng-submit="vulpejs.reset()" submitted="vulpejs.ui.form.submitted" novalidate shake-that)
      .panel.panel-default.box-shadow
        .panel-heading=__('Reset Password')
        .panel-body
          input#token(type="hidden" name="token" value="#{id}")
          input#email(type="hidden" name="email" value="#{email}")
          fieldset(ng-hide="vulpejs.changed")
            .form-group(ng-class="{'has-error': resetPasswordForm.password.$invalid && vulpejs.ui.form.submitted}")
              label(for="user-password")=__('Password')
              input#user-password.form-control(type="password" name="password" placeholder=__('Password') ng-model="vulpejs.item.password" required)
            .form-group(ng-class="{'has-error': resetPasswordForm.confirmPassword.$invalid && vulpejs.ui.form.submitted}")
              label(for="user-password-confirm")=__('Password Confirm')
              input#user-password-confirm.form-control(type="password" name="passwordConfirm" placeholder=__('Password Confirm') ng-model="vulpejs.item.passwordConfirm" data-match="vulpejs.item.password" required)
            .form-group.message-match.message-block(ng-show="resetPasswordForm.$error" style="display:none")
              span.label.label-danger(ng-show="resetPasswordForm.passwordConfirm.$error.match")=__('Password do not match')
            button.btn.btn-primary.btn-lg.btn-block(type="submit")=__('Reset Password')
            .form-group.ng-hide(ng-hide="!vulpejs.error")
              h1=__('Oops! I\'m sorry, but an error occurred while changing your password.')
                br
                small(ng-hide="vulpejs.already")=__('Please try again in a few moments.')
          fieldset(ng-cloak ng-hide="!vulpejs.changed")
            .form-group
              h1=__('Your password has been successfully changed!')
  include includes/script
