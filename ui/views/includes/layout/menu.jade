      button.navbar-toggle(type="button" data-toggle="collapse" data-target="#app-navbar")
        span.sr-only=__('Toggle navigation')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/")=__(title)
        include release
