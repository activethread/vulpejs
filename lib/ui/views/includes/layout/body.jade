if ui.layout.header
  #header
    include ../../../../../../../views/includes/layout/header
if ui.layout.menu
  #menu
    include ../../../../../../../views/includes/layout/menu
else
  nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
    .navbar-header
      button.navbar-toggle(type="button" data-toggle="collapse" data-target="#app-navbar")
        span.sr-only=__('Toggle navigation')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/")=__(title)
        include release
    #app-navbar.collapse.navbar-collapse
      if ui.error
        ul.nav.navbar-nav
          li#home
            a(href="/")=__('Go to Home')
      else
        include ../../../../../../../views/includes/layout/menu

if ui.layout.custom
  #custom
    include ../../../../../../../views/includes/layout/custom

if ui.layout.messages
  #messages.bs-component(ng-controller="MessagesController" ng-show="messages")
    alert(ng-cloak ng-repeat="message in messages" type="{{message.type}}" close="close($index)" class="slide-down" ng-hide="!messages")
      h4(ng-cloak ng-if="message.type === 'success'")
        i.fa.fa-check-circle.fa-fw
        =__('Success!')
      h4(ng-cloak ng-if="message.type === 'danger'")
        i.fa.fa-exclamation-circle.fa-fw
        =__('Error!')
      h4(ng-cloak ng-if="message.type === 'info'")
        i.fa.fa-info-circle.fa-fw
        =__('Information!')
      h4(ng-cloak ng-if="message.type === 'warning'")
        i.fa.fa-exclamation-triangle.fa-fw
        =__('Warning!')
      p {{message.msg}}

if ui.layout.container
  #content.row.slide-down(ui-view)
    include ../../../../../../../views/includes/layout/container

if ui.layout.content
  #content(ui-view)
    block content

if ui.layout.footer
  #footer
    include ../../../../../../../views/includes/layout/footer
